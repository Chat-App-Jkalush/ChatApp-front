reviewer:
  - name: CodeRabbit
    model: gpt-4
    style: concise
    tone: professional
    comment_mode: inline
    summary: true
    language: en

rules:
  - no-console-log
  - no-unused-imports
  - enforce-jsdoc-params
  - prefer-arrow-functions
  - consistent-import-ordering
  - consistent-naming-style: camelCase
  - limit-function-length: 40

exclude_paths:
  - dist/
  - node_modules/
  - .next/
  - *.test.ts
  - *.spec.ts

settings:
  auto_review_on_pr: true
